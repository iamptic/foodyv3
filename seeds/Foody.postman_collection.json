{
  "info": {
    "name": "Foody API",
    "_postman_id": "foody-1755134211",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{API}}/health"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "url": "{{API}}/api/v1/merchant/register_public",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\":\"Пекарня №1\",\"phone\":\"+79991234567\"}"
        }
      }
    },
    {
      "name": "Recover (dev)",
      "request": {
        "method": "POST",
        "url": "{{API}}/api/v1/merchant/recover",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"phone\":\"+79991234567\",\"secret\":\"{{RECOVERY_SECRET}}\"}"
        }
      }
    },
    {
      "name": "Profile",
      "request": {
        "method": "GET",
        "url": "{{API}}/api/v1/merchant/profile?restaurant_id={{RID}}",
        "header": [
          {
            "key": "X-Foody-Key",
            "value": "{{KEY}}"
          }
        ]
      }
    },
    {
      "name": "Create offer",
      "request": {
        "method": "POST",
        "url": "{{API}}/api/v1/merchant/offers",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Foody-Key",
            "value": "{{KEY}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"restaurant_id\":\"{{RID}}\",\"title\":\"Набор эклеров\",\"price_cents\":19900,\"qty_total\":5,\"qty_left\":5,\"expires_at\":\"2025-08-31T20:00:00Z\"}"
        }
      }
    },
    {
      "name": "Public offers",
      "request": {
        "method": "GET",
        "url": "{{API}}/api/v1/offers"
      }
    },
    {
      "name": "Reserve",
      "request": {
        "method": "POST",
        "url": "{{API}}/api/v1/reservations",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"offer_id\":\"{{OFF}}\",\"qty\":2}"
        }
      }
    },
    {
      "name": "QR by code",
      "request": {
        "method": "GET",
        "url": "{{API}}/api/v1/reservations/qr?code={{CODE}}"
      }
    }
  ],
  "variable": [
    {
      "key": "API",
      "value": "https://backend.example"
    },
    {
      "key": "RID",
      "value": ""
    },
    {
      "key": "KEY",
      "value": ""
    },
    {
      "key": "RECOVERY_SECRET",
      "value": "foodyDevRecover123"
    },
    {
      "key": "OFF",
      "value": ""
    },
    {
      "key": "CODE",
      "value": ""
    }
  ]
}